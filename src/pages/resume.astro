          'OEM hardware',
          'Zigbee',
          'Buildroot',
          'linux',
          'Python',
          'Go',
          'AWS IoT Core',
          'AWS DynamoDB',
          'AWS EKS',
          'Kinesis Analytics',
          'Apache Flink',
          'AWS Lambda',
          'Terraform',
          'AWS CDK',
