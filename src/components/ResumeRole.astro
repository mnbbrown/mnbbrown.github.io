---
interface Props {
  stack?: string[];
}

const { stack } = Astro.props;
---

<div class="role">
  <div class="role-content">
    <slot />
  </div>
  {stack && (
    <ul class="stack-tags">
      {stack.sort().map((s) => (
        <li class="stack-tag">{s}</li>
      ))}
    </ul>
  )}
</div>

<style>
  .role {
    margin-bottom: 2rem;
  }

  @media print {
    .role {
      margin-bottom: 0;
    }
  }

  .stack-tags {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: 1rem;
    gap: 0.2rem;
    font-size: 80%;
  }

  .stack-tag {
    padding: 0.2rem 0.4rem;
    margin: 0 0.4rem 0.4rem 0;
    background-color: #efefef;
    border-radius: 4px;
    display: inline-block;
  }

  .stack-tag:hover {
    background-color: #dedede;
  }
</style>
