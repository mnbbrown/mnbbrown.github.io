---
interface Props {
  name: string;
  role?: string;
  start?: string;
  end?: string;
  link?: string;
}

const { name, role, start, end, link } = Astro.props;
---

<div class="company">
  <div class="company-title">
    <h3>
      <a href={link} target="_blank" rel="noreferrer" class="company-link">
        {name}
      </a>
    </h3>
    {(role || start) && (
      <div class="company-role">
        {role && role + ','} {start} - {end || 'current'}
      </div>
    )}
  </div>
  <slot />
</div>

<style>
  .company {
    margin-bottom: 2rem;
    page-break-inside: avoid;
  }

  .company-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .company-link {
    color: inherit;
    text-decoration: underline;
    display: flex;
    align-items: center;
  }

  .company-role {
    font-family: Monaco, 'Courier New', monospace;
    font-size: 85%;
    font-stretch: condensed;
    color: #888;
  }

  :global(li) {
    margin: 0;
  }
</style>
